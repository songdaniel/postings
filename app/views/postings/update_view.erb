<h1>Edit Page</h1>
    
<form method="POST" action="/real_update/<%= @one_post.id %>">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="title" name="title" value="<%= @one_post.title %>" class="form-control" id="title">
  </div>
  <div class="form-group">
    <label for="body">Body:</label>
    <textarea name="body" rows="5" class="form-control" id="body"><%= @one_post.body %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>




